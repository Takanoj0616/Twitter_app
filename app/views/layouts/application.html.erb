<!DOCTYPE html>
<html>
  <head>
    <title>TwitterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <nav class="global-nav">
        <div class="container">
          <div class="navigation">
            <ul class="left-actions">
              <li class="nav-item">
                <%= link_to "ホームに戻る", "#", class: "nav-link" %>
              </li>
            </ul>
            <ul class="right-actions">
              <li class="nav-item">
                <%= link_to "ツイート", "#", class: "btn btn-primary tweet-btn" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <%= yield %>
  </body>
</html>
